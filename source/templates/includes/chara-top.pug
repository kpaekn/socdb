.chara-top.for-mobile(style={
  'background-image':`url(images/skin/${slug(name)}.webp)`,
  'background-position-y': `${image[0]}px`,
  'background-size': `${image[1]}px`
})
  .face-template face
  .chara-name-container
    img.rarity-image(src='images/rarity/' + slug(rarity) + '.webp')
    div
      .chara-name #{name}
      .chara-title
        img.role-image(src='images/role/' + slug(role) + '.webp')
        | #{title}

  .factions
    each faction in factions
      .faction 
        img(src='images/faction/' + slug(faction) + '.webp')
        span.label #{faction}

  if stats
    .chara-stats
      h4
        i.gold.ri-gemini-fill
        | &nbsp;Stats
      each value, stat in stats
        .ui.basic.image.label
          img(src='images/stat/'+ slug(stat) +'.png')
          | #{stat}
          .detail #{value}
